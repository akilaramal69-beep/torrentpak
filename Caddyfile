    email {$EMAIL}
}

# Catch-all for HTTP (Allows access via VPS IP and domain before SSL is ready)
:80 {
    # Main Application
    reverse_proxy app:5000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }

    # Jackett UI
    handle_path /jackett* {
        reverse_proxy jackett:9117 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
}

# Domain specific block (Caddy will automatically handle SSL Certificates)
{$DOMAIN} {
    reverse_proxy app:5000 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }

    handle_path /jackett* {
        reverse_proxy jackett:9117 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
}
