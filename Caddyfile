{
    # Optional: Global options (email for SSL)
    email {$EMAIL}
}

{$DOMAIN} {
    # Main Application
    reverse_proxy app:5000

    # Jackett UI
    # Note: If you get a 503 or 404, ensure Jackett is running.
    # To access Jackett at /jackett, you may need to set 
    # 'Base Path Override' to '/jackett' in Jackett's settings.
    handle_path /jackett* {
        reverse_proxy jackett:9117 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
    }
}
